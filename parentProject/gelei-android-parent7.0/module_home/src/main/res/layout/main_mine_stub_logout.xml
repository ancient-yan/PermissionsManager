<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMineLogoutChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/my_child"
        android:textColor="@color/gray_level1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mine_gray_solid_round_10">

        <TextView
            android:id="@+id/tvMineMyChildSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/home_mine_login_guard"
            android:drawablePadding="18dp"
            android:text="@string/mine_click_to_login"
            android:textColor="@color/gray_level2"/>

    </FrameLayout>

</LinearLayout>