<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpLauncherGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvLauncherSkip"
        android:text="@string/skip"
        android:layout_gravity="end"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:background="@drawable/daily_stream_selector"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/bottomIndicator"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="12dp"
            android:src="@drawable/launcher_guide_selected"
            android:layout_height="2dp" />

        <ImageView
            android:layout_width="12dp"
            android:src="@drawable/launcher_guide_normal"
            android:layout_marginLeft="10dp"
            android:layout_height="2dp" />

        <ImageView
            android:layout_width="12dp"
            android:src="@drawable/launcher_guide_normal"
            android:layout_marginLeft="10dp"
            android:layout_height="2dp" />

        <ImageView
            android:layout_width="12dp"
            android:src="@drawable/launcher_guide_normal"
            android:layout_marginLeft="10dp"
            android:layout_height="2dp" />
    </LinearLayout>

</FrameLayout>