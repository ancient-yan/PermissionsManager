<manifest package="com.gwchina.lssw.parent.home"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <!--启动页-->
        <activity
            android:name="com.gwchina.parent.launcher.LauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--启动页广告-->
        <activity
            android:name="com.gwchina.parent.launcher.LauncherADActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.gwchina.parent.launcher.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--孩子位置详情页-->
        <activity
            android:name="com.gwchina.parent.main.presentation.location.ChildLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--主界面-->
        <activity
            android:name="com.gwchina.parent.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--写日记-->
        <activity
            android:name="com.gwchina.parent.daily.DailyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--应用推荐-->
        <activity
            android:name="com.gwchina.parent.recommend.RecommendActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--远程截屏-->
        <activity
            android:name="com.gwchina.parent.screenshot.ScreenshotActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
