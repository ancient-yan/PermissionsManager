<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/base_retry_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_page_fail"
        app:layout_marginTopPercent="20%"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@id/base_retry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_retry_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/page_error_load_fail_tips"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_normal"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@id/base_retry_btn"
        style="@style/Style_Round_Green_Btn_Normal"
        android:layout_below="@id/base_retry_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/page_error_retry_action_tips"/>

</android.support.percent.PercentRelativeLayout>