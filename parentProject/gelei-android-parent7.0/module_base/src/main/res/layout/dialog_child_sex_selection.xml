<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_solid_round10"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tvDialogChildSexTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/your_child_list_title"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivDialogChildSexMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/img_head_boy_38"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDialogChildSexTitle"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/ivDialogChildSexMaleFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_choose_small"
        app:layout_constraintBottom_toBottomOf="@id/ivDialogChildSexMale"
        app:layout_constraintRight_toRightOf="@id/ivDialogChildSexMale"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tvDialogChildSexMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/child_sex_male"
        android:textColor="@color/gray_level1"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/ivDialogChildSexMale"
        app:layout_constraintRight_toRightOf="@+id/ivDialogChildSexMale"
        app:layout_constraintTop_toBottomOf="@+id/ivDialogChildSexMale"/>

    <ImageView
        android:id="@+id/ivDialogChildSexFemale"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/img_head_girl_38"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDialogChildSexTitle"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/ivDialogChildSexFemaleFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_choose_small"
        app:layout_constraintBottom_toBottomOf="@id/ivDialogChildSexFemale"
        app:layout_constraintRight_toRightOf="@id/ivDialogChildSexFemale"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tvDialogChildSexFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/child_sex_female"
        android:textColor="@color/gray_level1"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/ivDialogChildSexFemale"
        app:layout_constraintRight_toRightOf="@+id/ivDialogChildSexFemale"
        app:layout_constraintTop_toBottomOf="@+id/ivDialogChildSexFemale"/>

    <com.gwchina.sdk.base.widget.dialog.DialogBottomLayout
        android:id="@+id/dblDialogChildSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvDialogChildSexMale"/>

</android.support.constraint.ConstraintLayout>