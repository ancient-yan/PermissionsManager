<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/ivAppItemPermissionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="@dimen/common_edge"
        android:layout_marginTop="22dp"
        android:src="@drawable/app_icon_type_disable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tvAppItemPermissionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        app:layout_constraintBottom_toBottomOf="@id/ivAppItemPermissionIcon"
        app:layout_constraintLeft_toRightOf="@id/ivAppItemPermissionIcon"
        app:layout_constraintTop_toTopOf="@id/ivAppItemPermissionIcon"
        tools:text="自由使用"/>

    <ImageView
        android:id="@+id/ivAppItemPermissionCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_edge"
        android:src="@drawable/icon_radio_button_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <View
        android:id="@+id/viewAppItemPermissionDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_separate"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>