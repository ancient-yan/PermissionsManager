<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:background="@color/opacity_10_green_main"
    android:paddingTop="18dp"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/ivMigrationItemChildAvatar"
        app:layout_constraintLeft_toRightOf="@id/ivMigrationItemChildAvatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivMigrationItemChildAvatar">

        <TextView
            android:id="@+id/tvMigrationItemChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:textColor="@color/gray_level1"
            android:textSize="@dimen/text_x_big"
            android:textStyle="bold"
            tools:text="大大大大大的孩子孩子大大大大大的孩子孩子" />

        <TextView
            android:id="@+id/tvMigrationItemInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/gray_level2"
            android:textSize="@dimen/text_small"
            app:layout_constraintBottom_toBottomOf="@id/ivBindingItemChildAvatar"
            app:layout_constraintLeft_toLeftOf="@id/tvBindingItemChildName"
            tools:text="13岁，初一" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMigrationItemChildAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>