<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/base_retry_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_page_empty"
        app:layout_marginTopPercent="20%"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tip_title"
        android:layout_width="wrap_content"
        android:text="@string/family_phone_tip_title"
        android:textColor="@color/gray_level1"
        android:textSize="18sp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/base_retry_icon"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/base_retry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tip_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:text="@string/page_error_no_data"
        android:textSize="@dimen/text_normal" />

    <android.support.v7.widget.AppCompatButton
        android:id="@id/base_retry_btn"
        style="@style/Style_Round_Green_Btn_Normal"
        android:layout_below="@id/base_retry_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/page_error_retry_action_tips" />

</android.support.percent.PercentRelativeLayout>