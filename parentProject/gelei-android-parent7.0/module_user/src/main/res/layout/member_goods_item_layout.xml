<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.support.constraint.ConstraintLayout"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/goodsLayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/goods_normal_shape"
        app:layout_constraintDimensionRatio="h,5:6">

        <TextView
            android:id="@+id/tvPurchasePlanName"
            android:layout_width="wrap_content"
            android:textColor="@color/gray_level1"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            tools:text="6个月"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPurchaseDiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/member_price_color"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:layout_marginTop="5dp"
            tools:text="￥48" />

        <TextView
            android:id="@+id/tvPurchaseOriginPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_level2"
            android:textSize="@dimen/text_smaller"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3.5dp"
            tools:text="￥48" />

        <TextView
            android:id="@+id/tvPurchasePlanRemark"
            android:textSize="9sp"
            android:textColor="@color/gray_level2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="再送3个月+499元洋葱数学年卡"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvPurchaseSpecialOffer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/goodsLayout"
        android:layout_width="wrap_content"
        android:background="@drawable/goods_label_shape"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        tools:text="限时特惠"
        android:layout_height="20dp" />

</merge>