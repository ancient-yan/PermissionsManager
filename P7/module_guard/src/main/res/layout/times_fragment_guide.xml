<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.gwchina.sdk.base.widget.GwTitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guard_time"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_xx_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_edge_big"
        android:layout_marginStart="@dimen/common_edge_big"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:text="@string/time_guard_make_plan_desc"
        android:textColor="@color/gray_level2"
        android:textSize="@dimen/text_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:src="@drawable/times_guide"
            android:layout_gravity="center_horizontal"
            tools:ignore="ContentDescription" />

    </ScrollView>

    <com.coorchice.library.SuperTextView
        android:id="@+id/tvTimesGuideTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="7dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="7dp"
        android:text="@string/time_guard_make_plan_tips"
        android:textColor="@color/gray_level2"
        android:textSize="@dimen/text_small"
        app:stv_corner="2dp"
        app:stv_solid="@color/gray_separate" />

    <Button
        android:id="@+id/btnTimeAddPlan"
        style="@style/Style_Round_Green_Btn_Big_Longest"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:text="@string/add_guard_time_plan" />
</LinearLayout>