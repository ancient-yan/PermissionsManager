<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFamilyGroupIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/family_icon_phone"
        app:layout_constraintBottom_toBottomOf="@id/viewFamilySeg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFamilyCallLimitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="@string/all_phone_no_limit"
        android:textColor="@color/gray_level1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/viewFamilySeg"
        app:layout_constraintStart_toEndOf="@id/ivFamilyGroupIcon"
        app:layout_constraintTop_toTopOf="parent" />


    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/sbFamilyGroupRange"
        style="@style/Style_SwitchBtn"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@id/viewFamilySeg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/viewFamilySeg"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="21dp"
        android:background="@color/gray_cutting_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFamilyGroupIcon" />


</android.support.constraint.ConstraintLayout>