<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:id="@+id/container"
    android:background="@drawable/home_white_solid_round_top_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/wechat"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/home_icon_wechat"
        android:text="@string/wechat_friend"
        android:textSize="12sp"
        android:textColor="@color/gray_level2"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@id/qq"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:drawableTop="@drawable/home_icon_qq"
        android:text="@string/qq_friend"
        android:textSize="12sp"
        android:textColor="@color/gray_level2"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/wechat"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/cancel"
        android:background="@color/gray_level4" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/cancel_"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/gray_level1"
        android:layout_height="49dp" />

</android.support.constraint.ConstraintLayout>