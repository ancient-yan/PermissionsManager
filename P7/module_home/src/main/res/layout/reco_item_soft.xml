<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/ivItemSoftIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/common_edge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tvItemInstallStatus"
        style="@style/Style_Round_Green_Btn_Small"
        android:layout_marginEnd="@dimen/common_edge"
        android:gravity="center"
        android:text="@string/install_for_child"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/ivItemSoftIcon"
        app:layout_constraintRight_toLeftOf="@id/tvItemInstallStatus"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="快学语文-快速学会小学语文"/>

    <TextView
        android:id="@+id/tvItemPhrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="@color/gray_level2"
        android:textSize="@dimen/text_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/ivItemSoftIcon"
        app:layout_constraintRight_toLeftOf="@id/tvItemInstallStatus"
        app:layout_constraintTop_toBottomOf="@id/tvItemName"
        tools:text="快学语文-快速学会小学语文快速学会小学语文快速学会小学语文快速学会小学语文快速学会小学语文快速学会小学语文"/>

    <com.gwchina.sdk.base.widget.views.GwRatingBar
        android:id="@+id/rbRecoItemRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/ivItemSoftIcon"
        app:layout_constraintLeft_toRightOf="@id/ivItemSoftIcon"
        app:rb_can_operation="false"
        app:rb_star_count="10"
        app:rb_star_margin="3dp"
        app:rb_use_half_star="true"/>

    <TextView
        android:id="@+id/tvRecoItemScoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:textColor="@color/yellow_level1"
        android:textSize="@dimen/text_small"
        app:layout_constraintLeft_toRightOf="@id/rbRecoItemRating"
        app:layout_constraintTop_toBottomOf="@id/tvItemPhrase"
        tools:text="7.0分"/>

</android.support.constraint.ConstraintLayout>