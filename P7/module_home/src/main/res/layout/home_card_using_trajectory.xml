<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHomeUsingTrajectoryDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/home_card_using_trajectory_desc"
        android:textColor="@color/gray_level3"
        android:textSize="@dimen/text_normal" />

    <ImageView
        android:id="@+id/ivHomeNoUsingTrajectory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="30sp"
        android:src="@drawable/home_img_no_trajectory"
        tools:ignore="ContentDescription" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHomeUsingTrajectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/rvHomeUsingTrajectoryBottomTips"
        android:layout_width="match_parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="27dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/reach_bottom_tips"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray_level2"
        android:textSize="@dimen/text_small" />

</LinearLayout>