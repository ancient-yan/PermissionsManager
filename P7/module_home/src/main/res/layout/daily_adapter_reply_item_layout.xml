<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_level1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/gray_level2"
        android:background="@drawable/daily_stream_selector"
        android:textSize="13sp" />

    <com.gwchina.parent.daily.widget.DailyReplyLayout
        android:id="@+id/dailyReplyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_gray_solid_round_5"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp" />
</LinearLayout>