<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="220">

    <scale
        android:fromXScale="1.125"
        android:fromYScale="1.125"
        android:interpolator="@anim/window_scale_inout_scale_interpolator"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1"/>

    <alpha
        android:fromAlpha="0"
        android:interpolator="@android:interpolator/decelerate_cubic"
        android:toAlpha="1"/>

</set>