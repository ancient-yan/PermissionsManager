<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:background="@drawable/home_icon_shot_bg"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvToday"
        android:layout_width="match_parent"
        android:text="@string/today"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/green_level1"
        android:background="@drawable/sel_selectable_item_white_bg"
        android:layout_height="49dp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_level4"
        android:layout_height="0.5dp" />

    <TextView
        android:id="@+id/tvYesterday"
        android:layout_width="match_parent"
        android:text="@string/yesterday"
        android:gravity="center"
        android:textColor="@color/gray_level2"
        android:textSize="14sp"
        android:background="@drawable/sel_selectable_item_white_bg"
        android:layout_height="49dp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_level4"
        android:layout_height="0.5dp" />

    <TextView
        android:id="@+id/tvTheDayBeforeYesterday"
        android:layout_width="match_parent"
        android:background="@drawable/sel_selectable_item_white_bg"
        android:text="@string/the_day_before_yesterday"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/gray_level2"
        android:layout_height="49dp" />


</LinearLayout>