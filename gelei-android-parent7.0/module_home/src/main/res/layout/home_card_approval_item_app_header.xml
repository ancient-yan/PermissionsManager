<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/ivHomeItemApprovalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/gray_level2"
        android:textSize="@dimen/text_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="大孩子的设备大孩子的设备大孩子大孩子的设备大孩子的设备大孩子大孩子的设备大孩子的设备大孩子"/>

    <com.coorchice.library.SuperTextView
        android:id="@+id/ivHomeItemApprovalIndex"
        style="@style/Style_STV_DeviceIndex"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/ivHomeItemApprovalTitle"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>