<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_selectable_item_white_bg"
    android:clickable="true"
    android:paddingBottom="17dp"
    android:paddingEnd="@dimen/common_edge"
    android:paddingStart="@dimen/common_edge"
    android:paddingTop="17dp"
    tools:ignore="KeyboardInaccessibleWidget">

    <TextView
        android:id="@+id/mineItemTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="消息通知"/>

    <View
        android:id="@+id/mineItemViewNotification"
        android:layout_width="@dimen/notification_dot"
        android:layout_height="@dimen/notification_dot"
        android:layout_marginStart="6dp"
        android:background="@drawable/shape_red_dot_notification"
        app:layout_constraintBottom_toBottomOf="@id/mineItemTvTitle"
        app:layout_constraintLeft_toRightOf="@id/mineItemTvTitle"
        app:layout_constraintTop_toTopOf="@id/mineItemTvTitle"/>

    <ImageView
        android:id="@+id/mineItemIvArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/mineItemTvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mineItemIvArrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/new_version_tips"/>

</android.support.constraint.ConstraintLayout>