<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="AppTheme.NoActionBar.Member" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/memberCenterColorPrimary</item>
        <item name="colorPrimaryDark">@color/memberCenterColorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray_bg</item>
    </style>

    <style name="MemberCenter_Style_Text_Small" tools:ignore="ResourceName">
        <item name="android:textColor">@color/gray_level2</item>
        <item name="android:textColorHint">@color/gray_level3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MemberCenter_Style_Text_Big" tools:ignore="ResourceName">
        <item name="android:textColor">@color/gray_level1</item>
        <item name="android:textColorHint">@color/gray_level3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">27dp</item>
    </style>

    <style name="SimpleMultiStateView_Member_Record" parent="SimpleMultiStateView_Default">
        <item name="msv_net_errorView">@layout/member_record_layout_empty</item>
        <item name="msv_emptyText">@string/user_member_record_empty</item>
        <item name="msv_emptyImg">@drawable/img_page_empty</item>
        <item name="msv_emptyAction">@string/user_member_purchase_title</item>
    </style>

    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/color_text_02</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--黄色长圆按钮-->
    <style name="Style_Round_Yellow_Btn_Big_Longest" parent="Style_Btn_Longest_With_Margin">
        <item name="android:background">@drawable/sel_yellow_round25</item>
        <item name="android:textColor">@color/member_price_color</item>
    </style>
</resources>