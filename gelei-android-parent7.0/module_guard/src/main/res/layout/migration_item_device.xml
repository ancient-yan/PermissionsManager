<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/migration_shape_device_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMigrationItemState"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_status_normal"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvMigrationItemDeviceName"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@id/ivMigrationItemState"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        tools:text="华为nova3"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMigrationItemDeviceState"
        app:layout_constraintLeft_toRightOf="@id/ivMigrationItemState"
        app:layout_constraintTop_toBottomOf="@id/tvMigrationItemDeviceName"
        android:layout_width="wrap_content"
        android:textColor="@color/gray_level2"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/text_small"
        android:layout_marginStart="10dp"
        tools:text="版本已升级，可开启守护"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>