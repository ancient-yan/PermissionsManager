<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/tvDialogSwitchDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="15"
        android:paddingBottom="15dp"
        android:paddingEnd="@dimen/common_edge"
        android:paddingStart="@dimen/common_edge"
        android:paddingTop="15dp"
        android:textColor="@color/gray_level1"
        android:textSize="@dimen/text_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="哈哈哈"/>

    <com.coorchice.library.SuperTextView
        android:id="@+id/tvDialogSwitchDeviceIndex"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="3dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_smaller"
        app:layout_constraintBottom_toBottomOf="@id/tvDialogSwitchDeviceName"
        app:layout_constraintLeft_toRightOf="@id/tvDialogSwitchDeviceName"
        app:layout_constraintTop_toTopOf="@id/tvDialogSwitchDeviceName"
        app:stv_corner="10dp"
        app:stv_solid="@color/green_main"/>

    <ImageView
        android:id="@+id/ivDialogSwitchDeviceItemTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/common_edge"
        android:src="@drawable/icon_item_green_tick"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvDialogSwitchDeviceDisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_edge"
        android:text="@string/expired"
        android:textColor="@color/gray_level3"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivDialogSwitchDeviceItemTick"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/gray_cutting_line"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>